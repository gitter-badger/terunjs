{
    "config":{
        "generateSQL": true
    },
    "schema":{
        "name":"Pessoa",
        "attributes":{
            "nome": {
                "type": "text"
            },
            "idade":{
                "type": "number",
                "placeholder": "my age is",
                "label": "Write your age:",
                "minlength": 10,
                "min": 10
            },
            "casado":{
                "type": "boolean",
                "label": "Is married:"
            },
            "veiculos":{
                "type": "text",
                "label":"Selecione seu veiculo",
                "reference": {
                    "entity": "veiculo",
                    "relationship": "hasMany"
                }
            },
            "uber":{
                "type": "text",
                "label":"Qual teu uber?",
                "reference": {
                    "entity": "veiculo",
                    "relationship":"hasOne"
                }
            }
        }
    }
}